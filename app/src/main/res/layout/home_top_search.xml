<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="44dp">

   <RelativeLayout
       android:layout_centerInParent="true"
       android:clickable="true"
       android:id="@+id/home_searchLayout"
       android:background="@drawable/home_search_shape"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/home_searchImage"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:paddingLeft="5dp"
               android:paddingRight="7dp"
               android:clickable="false"
               android:src="@drawable/search_ic_search"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:clickable="false"
               android:layout_toRightOf="@id/home_searchImage"
               android:layout_centerVertical="true"
               android:paddingRight="5dp"
               android:id="@+id/home_searchText"
               android:textSize="14dp"
               android:textColor="@color/text_black"
               android:text="@string/search_hint"
               android:singleLine="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>


   </RelativeLayout>

</RelativeLayout>